<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.andreas.dao.UserMapper">

    <select id="findAllUserByPage" resultType="com.andreas.domain.User">
        select *
        from USER
        <if test="true">
            and is_del !=1
        </if>
        <if test="dto.username !=null and dto.username !=''">
            and name = #{dto.username}
        </if>
        <if test="dto.startCreateTime != null and dto.endCreateTime != null">
            and create_time BETWEEN #{dto.startCreateTime} AND #{dto.endCreateTime}
        </if>
    </select>

    <update id="updateUserStatus">
        update user
        <trim prefix="set" suffixOverrides=",">
            <if test="status != null and status != '' ">
                status = #{status}
            </if>
        </trim>
        <where>
            <if test="id">
                id = #{id}
            </if>
        </where>
    </update>
    <select id="login" resultType="com.andreas.vo.UserVO" parameterType="com.andreas.domain.User">
        select *
        from user
        where phone = #{user.phone}
    </select>
    <!--根据用户的id，然后显示对应的Role角色-->
    <select id="findUserRoleById" resultType="com.andreas.domain.Role">
        SELECT r.*
        from `user` u
                 left JOIN user_role_relation ur on u.id = ur.user_id
                 left join roles r on ur.role_id = r.id
        where u.id = #{id};
    </select>
    <delete id="deleteUserContextRole">
        delete
        from user_role_relation
        where user_id = #{userId}
    </delete>
    <insert id="userContextRole">
        insert into user_role_relation (user_id, role_id, created_time, updated_time, created_by, updated_by)
        values (#{userId}, #{roleId}, # {createdTime}, #{updatedTime}, #{createdBy}, #{updatedBy})
    </insert>
</mapper>
